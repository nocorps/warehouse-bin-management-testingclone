<Window x:Class="WarehouseManagement.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:WarehouseManagement.Desktop.ViewModels"
        xmlns:views="clr-namespace:WarehouseManagement.Desktop.Views"
        Title="{Binding ApplicationTitle}"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top App Bar -->
            <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Application Title and Warehouse Info -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Warehouse" Width="24" Height="24" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding ApplicationTitle}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Rectangle Width="1" Height="20" Fill="White" Opacity="0.3" Margin="16,0"/>
                        <TextBlock Text="{Binding CurrentWarehouseName}" FontSize="14" VerticalAlignment="Center" Opacity="0.9"/>
                    </StackPanel>

                    <!-- Loading Indicator -->
                    <ProgressBar Grid.Column="1" 
                                Style="{StaticResource LoadingSpinner}"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Margin="32,0"/>

                    <!-- Performance Metrics (Quick View) -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                        <materialDesign:Card Padding="8,4" Background="White" Margin="4,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CubeOutline" Width="16" Height="16" 
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding DashboardStats.TotalBins}" 
                                         FontWeight="Bold" Margin="4,0" VerticalAlignment="Center"
                                         Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="Bins" FontSize="12" VerticalAlignment="Center" Opacity="0.7"/>
                            </StackPanel>
                        </materialDesign:Card>

                        <materialDesign:Card Padding="8,4" Background="White" Margin="4,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ChartLine" Width="16" Height="16" 
                                                       Foreground="{DynamicResource AccentColorBrush}" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding DashboardStats.OverallUtilization, StringFormat={}{0:F1}%}" 
                                         FontWeight="Bold" Margin="4,0" VerticalAlignment="Center"
                                         Foreground="{DynamicResource AccentColorBrush}"/>
                                <TextBlock Text="Util." FontSize="12" VerticalAlignment="Center" Opacity="0.7"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>

                    <!-- User Menu -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignIconButton}" Foreground="White"
                               Command="{Binding RefreshDashboardCommand}" ToolTip="Refresh Dashboard">
                            <materialDesign:PackIcon Kind="Refresh"/>
                        </Button>
                        
                        <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" Foreground="White">
                            <materialDesign:PopupBox.ToggleContent>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Account" Width="20" Height="20" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding CurrentUserName}" Margin="8,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </materialDesign:PopupBox.ToggleContent>
                            <StackPanel>
                                <Button Content="About" Command="{Binding ShowAboutCommand}"/>
                                <Separator/>
                                <Button Content="Logout" Command="{Binding LogoutCommand}"/>
                            </StackPanel>
                        </materialDesign:PopupBox>
                    </StackPanel>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Main Content Area -->
            <TabControl Grid.Row="1" 
                       SelectedIndex="{Binding SelectedTabIndex}"
                       Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                       TabStripPlacement="Left"
                       Background="{DynamicResource MaterialDesignPaper}">

                <!-- Dashboard Tab -->
                <TabItem Header="Dashboard">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8">
                                <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Dashboard" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <views:DashboardView DataContext="{Binding DashboardViewModel}"/>
                </TabItem>

                <!-- Bin Management Tab -->
                <TabItem Header="Bins">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8">
                                <materialDesign:PackIcon Kind="CubeOutline" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Bin Management" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <views:BinManagementView DataContext="{Binding BinManagementViewModel}"/>
                </TabItem>

                <!-- Put Away Operations Tab -->
                <TabItem Header="Put Away">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8">
                                <materialDesign:PackIcon Kind="ArrowDownBold" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Put Away" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <views:PutAwayOperationsView DataContext="{Binding PutAwayOperationsViewModel}"/>
                </TabItem>

                <!-- Pick Operations Tab -->
                <TabItem Header="Pick">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8">
                                <materialDesign:PackIcon Kind="ArrowUpBold" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Pick Operations" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <views:PickOperationsView DataContext="{Binding PickOperationsViewModel}"/>
                </TabItem>

                <!-- Rack Configuration Tab -->
                <TabItem Header="Racks">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8">
                                <materialDesign:PackIcon Kind="Shelf" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Rack Config" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <views:RackConfigurationView DataContext="{Binding RackConfigurationViewModel}"/>
                </TabItem>

                <!-- Settings Tab -->
                <TabItem Header="Settings">
                    <TabItem.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8">
                                <materialDesign:PackIcon Kind="Settings" Width="20" Height="20" VerticalAlignment="Center"/>
                                <TextBlock Text="Settings" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </TabItem.HeaderTemplate>
                    <views:SettingsView DataContext="{Binding SettingsViewModel}"/>
                </TabItem>
            </TabControl>

            <!-- Status Bar -->
            <materialDesign:ColorZone Grid.Row="2" Mode="PrimaryLight" Padding="16,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Message -->
                    <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center"/>

                    <!-- Performance Indicators -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                        <TextBlock Text="Active Tasks:" FontSize="12" VerticalAlignment="Center" Opacity="0.7"/>
                        <TextBlock Text="{Binding DashboardStats.PendingPutAwayTasks}" 
                                 FontWeight="Bold" Margin="4,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Put Away," FontSize="12" VerticalAlignment="Center" Opacity="0.7"/>
                        <TextBlock Text="{Binding DashboardStats.PendingPickTasks}" 
                                 FontWeight="Bold" Margin="4,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Pick" FontSize="12" VerticalAlignment="Center" Opacity="0.7"/>
                    </StackPanel>

                    <!-- Current Time -->
                    <TextBlock Grid.Column="2" FontSize="12" VerticalAlignment="Center" Opacity="0.7">
                        <TextBlock.Text>
                            <Binding Source="{x:Static sys:DateTime.Now}" StringFormat="yyyy-MM-dd HH:mm:ss"/>
                        </TextBlock.Text>
                    </TextBlock>
                </Grid>
            </materialDesign:ColorZone>
        </Grid>
    </materialDesign:DialogHost>
</Window>
